<% layout("layouts/boilerPlate") %>

<div class="row row-gap-5">
  <div class="col-md-6">
    <div class="card">
      <img src="<%= camp.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">$<%= camp.price %></li>
        <li class="list-group-item text-secondary"><%= camp.location %></li>
        <li class="list-group-item text-secondary">
          Submitted by:- <%= camp.author.username %>
        </li>
      </ul>

      <div class="card-body d-flex justify-content-around">
        <a href="/campgrounds" class="card-link btn btn-success">Homepage</a>
        <% if((!currentUser) || (camp.author.username == currentUser.username)
        ){ %>
        <a
          href="/campgrounds/<%= camp._id %>/edit"
          class="card-link btn btn-warning text-white"
          >Edit</a
        >
        <form
          action="/campgrounds/<%= camp._id %>?_method=DELETE"
          method="post"
          class="d-inline"
        >
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>

        <% } %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <% if (currentUser){ %>
    <form
      action="/campgrounds/<%= camp._id%>/reviews"
      method="post"
      class="rating-form validated-form"
      novalidate
    >
      <h2 class="mb-3">Leave a review.</h2>
      <div class="mb-3">
        <label for="rating" class="form-label">Rating:</label>
        <input
          type="range"
          min="1"
          max="5"
          class="form-range"
          name="rating"
          required
        />
      </div>
      <div class="mb-3">
        <label for="body" class="form-label">Review:</label>
        <textarea
          class="form-control"
          id="body"
          rows="3"
          name="body"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <button class="btn btn-success">Submit</button>
    </form>
    <% } %> <% for (let review of camp.reviews) { %>
    <div class="card mb-3 mt-2">
      <div class="card-body">
        <h5>Rating:- <%= review.rating %></h5>
        <p class="card-text"><%= review.body %></p>
        <p class="card-text">By :- <%= review.author.username %></p>
        <% if(currentUser && review.author.username == currentUser.username){ %>
        <form
          action="/campgrounds/<%= camp._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="post"
        >
          <button class="btn btn-sm btn-danger" type="submit">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
