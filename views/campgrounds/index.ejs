<% layout("layouts/boilerPlate") %>
<h1>All Campgrounds</h1>

<% for (let camp of campgrounds){ %>
<div class="card mb-2">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= camp.image %>" class="img-fluid" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <small class="card-text text-secondary"><%= camp.location %></small>
        <p class="card-text">
          <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary"
            >Expand</a
          >
        </p>
      </div>
    </div>
  </div>
</div>
<% } %>

<h2><a href="/campgrounds/new">New Camp</a></h2>
